{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_UNITY_BUILD": "ON",
                "CMAKE_UNITY_BUILD_BATCH_SIZE": "8"
            }
        },
        {
            "name": "release",
            "displayName": "Release Config",
            "description": "Release build",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "analysis",
            "displayName": "Static Analysis Config",
            "description": "Build for static analysis (no unity builds)",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-analysis",
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Default Build",
            "configurePreset": "default"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "configurePreset": "release"
        },
        {
            "name": "analysis",
            "displayName": "Analysis Build",
            "configurePreset": "analysis"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "displayName": "Default Test",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}